<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <system.webServer>
    <staticContent>
      <mimeMap fileExtension=".js" mimeType="application/javascript" />
    </staticContent>
    
    <!-- Outbound rules for CORS - Allow external API calls -->
    <httpProtocol>
      <customHeaders>
        <!-- Remove X-Powered-By header for security -->
        <remove name="X-Powered-By" />
        
        <!-- CORS Headers - Allow your app to make requests to external APIs -->
        <add name="Access-Control-Allow-Origin" value="*" />
        <add name="Access-Control-Allow-Methods" value="GET, POST, PUT, DELETE, OPTIONS" />
        <add name="Access-Control-Allow-Headers" value="Content-Type, Authorization" />
        <add name="Access-Control-Max-Age" value="3600" />
        
        <!-- Security headers -->
        <add name="X-Content-Type-Options" value="nosniff" />
        <add name="X-Frame-Options" value="SAMEORIGIN" />
      </customHeaders>
    </httpProtocol>
    
    <rewrite>
      <rules>
        <rule name="React Routes" stopProcessing="true">
          <match url="^(?!.*\.(js|css|svg|png|jpg|jpeg|gif|ico|json)$).*$" />
          <conditions logicalGrouping="MatchAll">
            <add input="{REQUEST_FILENAME}" matchType="IsFile" negate="true" />
            <add input="{REQUEST_FILENAME}" matchType="IsDirectory" negate="true" />
          </conditions>
          <action type="Rewrite" url="/index.html" />
        </rule>
      </rules>
      
      <!-- Outbound rules to ensure proper headers on responses -->
      <outboundRules>
        <rule name="Add CORS headers for API calls">
          <match serverVariable="RESPONSE_Access-Control-Allow-Origin" pattern=".*" />
          <action type="Rewrite" value="*" />
        </rule>
      </outboundRules>
    </rewrite>
    
    <!-- Security -->
    <security>
      <requestFiltering removeServerHeader="true">
        <!-- Allow larger request bodies for file uploads -->
        <requestLimits maxAllowedContentLength="52428800" />
      </requestFiltering>
    </security>
    
  </system.webServer>
</configuration>